{
  "verbose": true, 
  "ext": "js,json",
  "ignore": [
    ".git",
    "tests/*",
    "public/*",
    "scripts/*",
    "node_modules/**/node_modules"
  ],
  "execMap": {
    "js": "node --require ./node_modules/esm --require ./node_modules/dotenv/config"
  },
  "env": {
    "NODE_ENV": "development"
  }
}